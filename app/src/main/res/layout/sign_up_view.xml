<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_firstName"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="31dp"
        android:text="FirstName "
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/sign_up_first_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_firstName"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/textview_firstName"
        android:layout_toRightOf="@+id/textview_firstName"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textview_lastName"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textview_firstName"
        android:layout_alignStart="@+id/textview_firstName"
        android:layout_below="@+id/sign_up_first_Name"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/sign_up_first_Name"
        android:layout_toStartOf="@+id/sign_up_first_Name"
        android:text="LastName" />

    <TextView
        android:id="@+id/textview_profession"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textview_lastName"
        android:layout_alignStart="@+id/textview_lastName"
        android:layout_below="@+id/textview_lastName"
        android:layout_marginTop="29dp"
        android:text="Profession" />

    <TextView
        android:id="@+id/textview_city"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/textview_profession"
        android:layout_alignLeft="@+id/textview_profession"
        android:layout_alignRight="@+id/textview_profession"
        android:layout_alignStart="@+id/textview_profession"
        android:layout_below="@+id/textview_profession"
        android:layout_marginTop="33dp"
        android:text="City" />

    <TextView
        android:id="@+id/textview_emailId"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textview_city"
        android:layout_alignStart="@+id/textview_city"
        android:layout_below="@+id/textview_city"
        android:layout_marginTop="27dp"
        android:text="Email Address" />

    <EditText
        android:id="@+id/sign_up_last_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_profession"
        android:layout_alignLeft="@+id/sign_up_first_Name"
        android:layout_alignStart="@+id/sign_up_first_Name"
        android:ems="10"
        android:inputType="textNoSuggestions|textPersonName" />

    <EditText
        android:id="@+id/sign_up_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_city"
        android:layout_alignLeft="@+id/sign_up_last_Name"
        android:layout_alignStart="@+id/sign_up_last_Name"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_emailId"
        android:layout_alignLeft="@+id/sign_up_profession"
        android:layout_alignStart="@+id/sign_up_profession"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_emailId"
        android:layout_alignLeft="@+id/sign_up_city"
        android:layout_alignStart="@+id/sign_up_city"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textview_picture"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textview_emailId"
        android:layout_alignStart="@+id/textview_emailId"
        android:layout_below="@+id/textview_emailId"
        android:layout_marginTop="21dp"
        android:text="Upload Picture" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textview_contact"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textview_picture"
        android:layout_alignStart="@+id/textview_picture"
        android:layout_below="@+id/textview_picture"
        android:layout_marginTop="31dp"
        android:text="Contact" />

    <EditText
        android:id="@+id/sign_up_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_contact"
        android:layout_alignStart="@+id/sign_up_take_picture"
        android:ems="10"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/sign_up_take_picture"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_above="@+id/textview_contact"
        android:layout_alignEnd="@+id/sign_up_email"
        android:layout_alignStart="@+id/sign_up_email"
        android:layout_alignTop="@+id/textview_picture"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/textview_street"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/textview_contact"
        android:layout_below="@+id/textview_contact"
        android:layout_marginTop="12dp"
        android:text="Street" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_street"
        android:layout_alignStart="@+id/sign_up_contact"
        android:layout_below="@+id/sign_up_contact"
        android:ems="10"
        android:inputType="textPersonName"
        android:id="@+id/sign_up_street" />

    <TextView
        android:id="@+id/textview_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview_street"
        android:layout_below="@+id/textview_street"
        android:layout_marginTop="12dp"
        android:text="State" />

    <EditText
        android:id="@+id/sign_up_state"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textview_state"
        android:layout_alignStart="@+id/sign_up_button"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/sign_up_my_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sign_up_state"
        android:layout_toEndOf="@+id/sign_up_button"
        android:text="ZipCode" />

    <EditText
        android:id="@+id/signup_View_ZipCode"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_street"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/sign_up_state"
        android:layout_alignEnd="@+id/sign_up_street" />


</RelativeLayout>